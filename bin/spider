#!/usr/bin/env node

var fs    = require('fs'),
		path  = require('path'),
		log   = require('verbalize'),
		argv  = require('minimist')(process.argv.slice(2)),

		Create=require('../app/Create.spider');

// Verbalize `runner`
log.runner = 'spider';


switch (argv._[0]){
	case 'create':
	case 'add':
	case 'new':
	case 'a':
	case 'c':
	case 'n':
		console.log('create');
		Create.init();
		break;

	case 'rename':
	case 'r':
		console.log('rem');
		break;

	case 'move':
	case 'm':
		console.log('move');
		break;

	case 'delete':
	case 'd':
		console.log('delete');
		break;

	case 'pull':
	case 'p':
		console.log('pull');
		break;
}