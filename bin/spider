		Spider= {};


var Create=require('../app/Create');

// Verbalize `runner`
log.runner = 'spider';


switch (argv._[0]){

	/* add an existing Spider as part of existing project */
	case 'add':
	case 'a':
		//Add;
		break;


	/* create new Spider as part of existing project */
	case 'create':
	case 'c':
		Create;
		break;


	/* Init a new Spider in it's own repo and directory */
	case 'init':
	case 'i':
		//Init;
		break;


	/* Rename Spider's slug (locations as it was) */
	case 'rename':
	case 'r':
		//Rename;
		break;


	/* Change Spider's location: functional group, scope and slug */
	case 'move':
	case 'm':
		//Move;
		break;


	/* Delete a component from a project*/
	case 'delete':
	case 'd':
		//Delete;
		break;


	case 'update':
	case 'u':
		//Update;
		break;



	/* Change Spider's location: functional group, scope and slug */
  case 'install':
  	//Install;
  	break;
}
